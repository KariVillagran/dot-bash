[format]
	headers = "Content-Type: text/plain; charset=\"utf-8\""

[core]
	editor = vim
	excludesfile = /home/conan/.git/info/exclude

[merge]
	tool = meld
	conflictstyle = diff3

[alias]
	ci = commit
	co = checkout
	st = status
	stat = status
	# sometimes I misspell "status"
	stauts = status
	df = diff
	br = branch
	lp = log -p
	lol = log --graph --decorate --pretty=oneline --abbrev-commit
	lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
	ls = ls-files
	show-graph = log --graph --abbrev-commit --pretty=oneline
	short = log --oneline

	# remove stale branches
	clean-branches = !git remote prune origin && git branch --merged | egrep -v '(^\\*|master|dev)' | xargs -r git branch -d

	# checks that your local copy of the ref that youâ€™re overwriting is up-to-date before overwriting it
	please = push --force-with-lease

	# not so useful, just avoid entering editor, which I may want
	commend = commit --amend --no-edit

	# initializes a repo and starts the log, it needs a single word as a commit message, I don't know why
	it = !git init && git commit -m "StartProject" --allow-empty

	# git stsh      # stash only unstaged changes to tracked files
	# git stash     # stash any changes to tracked files
	# git staash    # stash untracked and tracked files
	# git staaash   # stash ignored, untracked, and tracked files

	stsh = stash --keep-index
	staash = stash --include-untracked
	staaash = stash --all

	# don't loose branch history when merging to master
	merc = merge --no-ff

[giggle]
	main-window-maximized = true
	main-window-geometry = 0x0+0+0
	main-window-view = HistoryView
	history-view-vpane-position = 386
	file-view-vpane-position = 539

[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	ui = true
	pager = true

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[push]
	# choose your poison
	# Git versions < 2.0 : push every branch when no branch is specified
#	default = matching

	# Git 2.0 : push only current branch when on branch is specified
	default = simple

[init]
	templatedir = /home/conan/.config/git/template

[credential]
	helper = cache --timeout=86400

[dropbox]
	folder = /home/conan/Dropbox/git.repos
